= simple_form_for @project do |f|
	= f.input :image
	= f.input :genre, collection: ["Action", "Adventure", "Comedy", "Crime", "Drama", "Horror", "Sci-fi"], input_html: { class: 'browser-default' }
	= f.input :duration, collection: ["Very short", "Short", "Long", "Feature"], input_html: { class: 'browser-default' }
	= f.input :title
	= f.input :synopsis
	= f.input :director, input_html: { min: 0, max: 1}
	= f.input :writer, input_html: { min: 0, max: 5}
	= f.input :actor, input_html: { min: 0, max: 15}
	= f.input :editor, input_html: { min: 0, max: 3}
	= f.input :composer, input_html: { min: 0, max: 3}
	= f.input :cinematographer, input_html: { min: 0, max: 3}
	= f.input :makeup, input_html: { min: 0, max: 5}
	= f.button :submit