- title "Edit Project - FADE IN"

%br
.card
  .card-block
    .form-header.orange.darken-4
      %h3
        %i.fa.fa-plus
        Edit Project
    = simple_form_for @project do |f|
      = f.input :image
      .form-inline
        = f.input :genre, collection: ["Action", "Adventure", "Comedy", "Crime", "Drama", "Horror", "Sci-fi"], input_html: { class: 'browser-default' }
        = f.input :duration, collection: ["Very short", "Short", "Long", "Feature"], input_html: { class: 'browser-default' }
      .md-form
        %i.fa.fa-rocket.prefix
        = f.input_field :title, id: "title", input_html: { minlength: 3, maxlength: 50, length: '50' }, :class => "form-control"
        %label{:for => "title"} Enter a title
      .md-form
        %i.fa.fa-pencil.prefix
        = f.input_field :synopsis, input_html: { minlength: 100, maxlength: 500, length: '500' }, :class => "md-textarea"
        %label{:for => "synopsis"} Enter a brief synopsis
      %h4
        Select what roles you need
      %hr
      .form-inline
        = f.input :director, input_html: { min: 0, max: 1}
        = f.input :writer, input_html: { min: 0, max: 5}
        = f.input :actor, input_html: { min: 0, max: 15}
        = f.input :editor, input_html: { min: 0, max: 3}
        = f.input :composer, input_html: { min: 0, max: 3}
        = f.input :cinematographer, input_html: { min: 0, max: 3}
        = f.input :makeup, input_html: { min: 0, max: 5}
      = f.input :public
      = f.button :submit, :class => "btn btn-primary btn-rounded btn-sm"
      = link_to "Cancel", root_path, :class => "btn btn-secondary btn-rounded"
= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, :class => "btn btn-warning btn-rounded"