- title "New Project - FADE IN"

%br
.card
  .card-block
    .form-header.orange.darken-4
      %h3
        %i.fa.fa-plus
        Create Project
    = simple_form_for @project do |f|
      = f.input :image
      .form-inline
        = f.input :genre, collection: ["Action", "Adventure", "Comedy", "Crime", "Drama", "Horror", "Sci-fi"], input_html: { class: 'browser-default' }
        = f.input :duration, collection: ["Very short", "Short", "Long", "Feature"], input_html: { class: 'browser-default' }
      = f.input :title, input_html: { minlength: 3, maxlength: 50, length: '50' }
      = f.input :synopsis, input_html: { minlength: 100, maxlength: 500, class: 'md-textarea', length: '500' }
      .form-inline
        .col
          %img.img-fluid{:src => "../assets/roles/clapperboard.png", :height => "50", :width => "50"}
          = f.input :director, label: false, input_html: { min: 0, max: 1, value: 0 }
        .col
          %img.img-fluid{:src => "../assets/roles/edit.png", :height => "50", :width => "50"}
          = f.input :writer, label: false, input_html: { min: 0, max: 5, value: 0 }
        .col
          %img.img-fluid{:src => "../assets/roles/theater.png", :height => "50", :width => "50"}
          = f.input :actor, label: false, input_html: { min: 0, max: 15, value: 0 }
        .col
          %img.img-fluid{:src => "../assets/roles/imac.png", :height => "50", :width => "50"}
          = f.input :editor, label: false, input_html: { min: 0, max: 3, value: 0 }
        .col
          %img.img-fluid{:src => "../assets/roles/music-player.png", :height => "50", :width => "50"}
          = f.input :composer, label: false, input_html: { min: 0, max: 3, value: 0 }
        .col
          %img.img-fluid{:src => "../assets/roles/photo-camera.png", :height => "50", :width => "50"}
          = f.input :cinematographer, label: false, input_html: { min: 0, max: 3, value: 0 }
        .col
          %img.img-fluid{:src => "../assets/roles/paint-brush.png", :height => "50", :width => "50"}
          = f.input :makeup, label: false, input_html: { min: 0, max: 5, value: 0 }
      = f.input :public, input_html: { checked: true }
      = f.button :submit, :class => "btn btn-primary btn-rounded btn-sm"
      = link_to "Cancel", root_path, :class => "btn btn-secondary btn-rounded"