.article.media
  %figure.image.is-64x64.fuck-u-lewis
    - if message.user.avatar_file_name.nil?
      %img{:src => "/assets/icon.png", :class => "is-chat-avatar"}/
    - else
      = image_tag message.user.avatar(:medium), :class => "is-chat-avatar"
  .media-content
    .content
      %p
        %strong 
          = link_to profile_path(message.user.user_name) do
            = message.user.first_name
            = message.user.last_name
        %small 
          @#{message.user.user_name}
        %small
          â€¢
          = time_ago_in_words(message.timestamp) + " ago"
        %br
        = message.body