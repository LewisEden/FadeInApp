.box
  %article.media
    .media-left
      %figure.image.is-64x64
        - if message.user.avatar_file_name.nil?
          %img.rounded-circle.img-responsive.round-img{:src => "/assets/icon.png"}/
        - else
          = image_tag message.user.avatar(:medium), :class => "rounded-circle img-responsive round-img"
    .media-content
      .content
        %p
          %strong 
            = link_to profile_path(message.user.user_name) do
              = message.user.first_name
              = message.user.last_name
          %small 
            @#{message.user.user_name}
          %small
            â€¢
            = time_ago_in_words(message.timestamp) + " ago"
          %br
          = message.body