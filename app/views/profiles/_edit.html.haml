= simple_form_for @user, url: {action: "update"}, html: { multipart: true} do |f|
	= f.input :avatar
	= f.input :bio
	= f.input :first_name
	= f.input :last_name
	= f.input :school, collection: ["Dunraven School"], input_html: { class: 'browser-default' }
	= f.input :pref_role, label: 'Preferred Role', collection: ["Actor","Cinematographer", "Composer", "Director", "Editor", "Writer", "Makeup Artist" ], input_html: { class: 'browser-default' } 
	= f.submit "Update Profile"