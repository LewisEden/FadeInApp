- title @user.user_name + " - FADE IN"

.tile.is-ancestor
  .tile.is-3.is-vertical.is-parent
    .tile.is-child.box
      - if @user.avatar_file_name.blank?
        %img{:src => "/assets/icon.png", :class => "rounded-circle"}
      - else
        = image_tag @user.avatar(:medium), :class => "rounded-circle", :width => "168"
      = @user.pref_role
      = @user.first_name
      = @user.last_name
      - if @user.admin
        %span.tag.is-danger
          ADMIN
      %p
        = @user.bio
      Projects
      %span.fa.fa-rocket
      = @user.projects.count
      = link_to edit_profile_path(@user.user_name) do
        %i.fa.fa-cog
        %span.hidden-sm-down Edit Profile
  .tile.is-vertical
    .tile
      .tile.is-parent
        .tile.is-child
          All work
          %a.button.is-primary Add New Playlist
          %a.button.is-primary
            %span.fa.fa-th-list
          %a.button.is-primary
            %span.fa.fa-th
    .tile
      .tile.is-parent
        .tile.is-child
          My current projects
          Add
          %a.button.is-primary.rounded-circle
            %span.fa.fa-plus
    .tile.tiles-wrap
      -@user.projects.each do |project|
        .tile.is-4.is-parent
          .tile.is-child.box
            = image_tag project.image.url(:medium), :class => "vidthumbnail"
            - if project.genre == "Action"
              //Action
              %span.red-text.fa.fa-fighter-jet
              %h5.red-text.display-inline
                = project.genre
              %span.red-text.fa.fa-clock-o.icon
              %h5.red-text.display-inline
                = project.duration
            - elsif project.genre == "Adventure"
              //Adventure
              %span.green-text.fa.fa-envira
              %h5.green-text.display-inline
                = project.genre
              %span.green-text.fa.fa-clock-o
              %h5.green-text.display-inline
                = project.duration
            - elsif project.genre == "Comedy"
              //Comedy
              %span.cyan-text.fa.fa-smile-o
              %h5.cyan-text.display-inline
                = project.genre
              %span.cyan-text.fa.fa-clock-o
              %h5.cyan-text.display-inline
                = project.duration
            - elsif project.genre == "Crime"
              //Crime
              %span.orange-text.fa.fa-gavel
              %h5.orange-text.display-inline
                = project.genre
              %span.orange-text.fa.fa-clock-o
              %h5.orange-text.display-inline
                = project.duration
            - elsif project.genre == "Drama"
              //Drama
              %span.amber-text.fa.fa-group
              %h5.amber-text.display-inline
                = project.genre
              %span.amber-text.fa.fa-clock-o
              %h5.amber-text.display-inline
                = project.duration
            - elsif project.genre == "Horror"
              //Horror
              %span.brown-text.fa.fa-warning
              %h5.brown-text.display-inline
                = project.genre
              %span.brown-text.fa.fa-clock-o
              %h5.brown-text.display-inline
                = project.duration
            - else
              //Si-fi
              %span.teal-text.fa.fa-rocket
              %h5.teal-text.display-inline
                = project.genre
              %span.teal-text.fa.fa-clock-o
              %h5.teal-text.display-inline
                = project.duration
            = project.title