%br
.container
  .row.col-md-6.col-lg-8.login-form.mx-auto.float-none
    .card
      .card-block
        / Header
        .form-header.orange.darken-4
          %h3
            %i.fa.fa-lock
            Login:
        / Body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true, :class => "form-control"
            = f.input :password, required: false, :class => "form-control"
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Log in", :class => "btn btn-primary btn-md"
      / Footer
      .modal-footer
        .options
          %p
            Not a member?
            = link_to "Sign up", new_registration_path(resource_name)
          %p
            Forgot
            = link_to "your password?", new_password_path(resource_name)
            