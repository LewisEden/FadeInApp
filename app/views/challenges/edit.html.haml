- title "Edit challenge - FADE IN"

%br
.card.card-space
  .card-block
    .form-header.primary-color
      %h3
        %i.fa.fa-plus
        Edit Challenge
    = simple_form_for @challenge do |f|
      .file-field
        .btn.btn-primary.btn-sm
          %span Upload header image
          = f.input_field :image, required: false
        .file-path-wrapper
          %input.file-path.validate{:placeholder => "Upload your file", :type => "text"}/
      %br
      %br
      .form-inline
        = f.input :genre, label: false, prompt: "Select genre", collection: ["Action", "Adventure", "Comedy", "Crime", "Drama", "Horror", "Sci-fi"], input_html: { class: "browser-default" }
        = f.input :duration, label: false, prompt: "Select duration", collection: ["Very short", "Short", "Long", "Feature"], input_html: { class: "browser-default" }
      .md-form
        %i.fa.fa-rocket.prefix
        = f.input_field :title, id: "title", :class => "form-control", :minlength => "3", :maxlength => 50, :length => "50"
        %label{:for => "title"} Enter a title
      .md-form
        %i.fa.fa-pencil.prefix
        = f.input_field :synopsis, :class => "md-textarea", :minlength => "100", :maxlength => 500, :length => "500"
        %label{:for => "synopsis"} Enter a brief synopsis
      .md-form
        %i.fa.fa-user.prefix
        = f.input_field :requirements, :class => "md-textarea"
        %label{:for => "requirements"} Enter the requirements
      %br
      = f.input :reward
      = f.input :featured, input_html: { checked: true, checked_value: true, unchecked_value: false}
      = f.button :submit, :class => "btn btn-primary primary-color btn-rounded btn-sm"
      = link_to "Delete", challenge_path(@challenge), method: :delete, data: { confirm: "Are you sure you want to delete this challenge?" }, :class => "btn btn-danger btn-rounded float-right"
      = link_to "Cancel", root_path, :class => "btn btn-primary btn-rounded"